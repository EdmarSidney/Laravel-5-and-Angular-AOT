{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./angular/ngfactory",
    "typeRoots": [ "node_modules/@types" ],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "angular/aot",
    "entryModule": "angular/app/modules/main.module.ts#MainModule",
    "debug": false
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "vendor",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "angular/app/bootstrap*.ts",
    "angular/app/polyfill.ts"
  ]
}
