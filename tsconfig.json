{
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "resources/assets/angular/ngfactory",
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "vendor",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "resources/assets/angular/**/bootstrap*.ts",
    "resources/assets/angular/**/polyfill.ts",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "resources/assets/angular/aot",
    "debug": false
  }
}